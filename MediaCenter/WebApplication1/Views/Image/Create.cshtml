@model MediaCenter.Models.Image

@{
    int id = ViewBag.id;
    string nameGalerie = ViewBag.nameGalerie;
    ViewData["Title"] = "Create Image";
}

<h2>Add Image - @nameGalerie</h2>
<p>Add Image to @nameGalerie in database.</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-id="@id" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group-sm">
                <label asp-for="Nom" class="control-label" required="required">Name of Image</label>
                <input asp-for="Nom" class="form-control" required="required" />
                <input type="hidden" asp-for="GalerieId" class="form-control" value="@id" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input name="files" type="file" required="required" accept="image/*" />
            </div>
            <br />
            <div class="oye-fab">
                <div class="oye-fab_btn">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-controller="Galerie" asp-action="Details" asp-route-id="@id" class="btn btn-danger">Return</a>
                </div>
            </div>
        </form>
    </div>
</div>