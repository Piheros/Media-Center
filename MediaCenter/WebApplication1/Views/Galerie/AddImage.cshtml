@model WebApplication1.Models.Galerie

@{
    ViewData["Title"] = "AddImage";
}

<h2>Add Image - @Html.DisplayFor(model => model.Nom)</h2>
<p>Add Image to @Html.DisplayFor(model => model.Nom) in database. </p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Nom" class="control-label" required="required"></label>
                <input asp-for="Nom" class="form-control" required="required" />
                <label class="custom-file-upload">
                    <br />
                    Upload file .png or jpg
                    <input name="file" size:"60" id="file" type="file" required="required" accept="image/*" />
                    </label>
            </div>
            <div class="oye-fab">
                <div class="oye-fab-btn">
                    <button type="submit" class="btn btn-success">Add</button>
                    <a asp-action="Details" class="btn btn-danger">Return</a>
                </div>
            </div>
        </form>
    </div>
</div>